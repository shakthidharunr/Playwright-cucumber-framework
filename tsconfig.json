{
  "compilerOptions": {
    "types": ["node", "@cucumber/cucumber"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "features/**/*.ts"]
}
